<h1>Admin: All Reservations</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Customer</th>
      <th>Email</th>
      <th>Time Slot</th>
      <th>Guests</th>
      <th>Booked On</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.id %></td>
        <td><%= reservation.user.name %></td>
        <td><%= reservation.user.email %></td>
        <td><%= reservation.table.start_time.in_time_zone("Asia/Manila").strftime("%B %d, %Y at %I:%M %p") %></td>
        <td><%= reservation.guest_count %></td>
        <td><%= reservation.created_at.in_time_zone("Asia/Manila").strftime("%B %d, %Y") %></td>
        <td>
          <%= button_to "Cancel", admin_reservation_path(reservation), method: :delete, class: "btn btn-danger", data: { confirm: "Cancel this reservation and notify user?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
