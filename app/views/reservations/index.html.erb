<h1>My Reservations</h1>

<table border="1" cellpadding="8" cellspacing="0" style="border-collapse: collapse; width: 100%;">
  <thead style="background-color: #333; color: white;">
    <tr>
      <th style="padding: 12px;">Time</th>
      <th style="padding: 12px;">Guests</th>
      <th style="padding: 12px;">Booked On</th>
      <th style="padding: 12px;">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td style="padding: 12px;"><%= reservation.table.start_time.in_time_zone("Asia/Manila").strftime("%B %d, %Y at %I:%M %p") %></td>
        <td style="padding: 12px; text-align: center;"><%= reservation.guest_count %></td>
        <td style="padding: 12px;"><%= reservation.created_at.in_time_zone("Asia/Manila").strftime("%B %d, %Y") %></td>
        <td style="padding: 12px; text-align: center;">
          <%= button_to "Cancel", reservation_path(reservation), method: :delete, data: { confirm: "Are you sure?" }, style: "padding: 6px 12px; background-color: #f44336; color: white; border: none; border-radius: 4px; cursor: pointer;" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><a href="<%= tables_path %>">Back to Time Slots</a></p>
